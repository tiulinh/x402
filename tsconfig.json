{
    "compilerOptions": {
        "module": "nodenext",
        "target": "ES2020",
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,       
        "lib": ["es2020", "es2020.bigint"] // Thêm hỗ trợ BigInt
                            
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}